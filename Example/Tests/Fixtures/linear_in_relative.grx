{
  "version" : "0.1",
  
  
  "layout" : {
    "class" : "GRXRelativeLayout",
    "id" : "root",

    "width" : "match_parent",
    "height" : "match_parent",

    "padding" : "8",
    "paddingLeft" : "12",
    "paddingTop" : "20",

    "subviews" : [
      {
        "class" : "UIImageView",
        "id" : "image",
        "width" : "60",
        "height" : "50",

        "margin" : "10",
        "marginLeft" : "20",
        
        "alignParentRight" : "true",
        "alignParentBottom" : "true"
      },
      {
         "class" : "UISwitch",
         "id" : "switch",
         "width" : "wrap_content",
         "height" : "wrap_content",

         "above" : "image",
         "toLeftOf" : "image",

         "visibility" : "gone",
      },
      {
        "class" : "GRXLinearLayout",
        "id" : "linear",
        "width" : "match_parent",
        "height" : "wrap_content",
        
        "alignParentTop" : "true",

        "subviews" : [
          {
            "class" : "UILabel",
            "id" : "label",
            "width" : "wrap_content",
            "height" : "wrap_content",

            "minWidth" : "200",
            "minHeight" : 50,
          },
          {
            "class" : "UIButton",
            "id" : "button",
            "width" : "wrap_content",
            "height" : "wrap_content",

            "visibility" : "hidden",
          },
        ]
      }
    ]
  }  
}
