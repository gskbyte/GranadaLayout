{
	"version" : "0.1",
 	
	"layout" : {
		"class" : "GRXLinearLayout",
		"width" : "wrap_content",
		"height" : "wrap_content",

		"direction" : "vertical",
		"debug_bgColor" : "white",

		"subviews" : [
			{
				"class" : "UISwitch",
				"id" : "switch",
				"debug_bgColor" : "red",
				"gravity" : "end",
				"margin" : "8",
			},
			{
				"class" : "UIImageView",
				"id" : "image",
				"width" : "wrap_content",
				"height" : "wrap_content",
                "minWidth" : "40",
                "minHeight" : "40",

				"debug_bgColor" : "blue",
				"gravity" : "center"
			},
			{
				"class" : "UIView",
				"id" : "green",
				"width" : "match_parent",
				"height" : "100",
				"gravity" : "center",
				"margin" : "12",

				"visibility" : "gone",

				"debug_bgColor" : "green",
			},
			{
				"class" : "UIView",
				"id" : "red",
				"width" : "match_parent",
				"height" : "80",
				"gravity" : "center",
				"margin" : "8",

				"debug_bgColor" : "red",
			},
			{
				"class" : "UIView",
				"id" : "blue",
				"width" : "200",
				"height" : "120",
				"margin" : "10",

				"debug_bgColor" : "blue",
				"gravity" : "begin"
			}
		]

	}
}