{
	"version" : "0.1",
 	
	"layout" : {
		"class" : "GRXLinearLayout",
		"width" : "match_parent",
		"height" : "wrap_content",

		"direction" : "vertical",
		"debug_bgColor" : "white",

		"subviews" : [
			{
				"class" : "UISwitch",
				"id" : "switch",
				"debug_bgColor" : "red",
				"gravity" : "end", // should be aligned to the right
				"margin" : "8",
			},
			{
				"class" : "UIImageView",
				"id" : "image",
				"width" : "wrap_content",
				"height" : "wrap_content",

				"debug_bgColor" : "blue",
				"gravity" : "center"
			},
			{
				"class" : "UIView",
				"id" : "green",
				"width" : "match_parent",
				"height" : "80",
				"gravity" : "center",
				"margin" : "8",

				"debug_bgColor" : "green",
			},
			{
				"class" : "UIView",
				"id" : "blue",
				"width" : "120",
				"height" : "120",
				"margin" : "10",

				"debug_bgColor" : "blue",
				"gravity" : "begin" // should be aligned to the left
			}
		]

	}
}